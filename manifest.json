{
  "name": "MC WOT-API Extension ",
  "description": "View the security of a url",
  "version": "1.1",
  "permissions": [
    "tabs", "http://*/*", "https://*/*" , "background"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
      "default_title": "WOT-API",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2
}